<div local-class="title">{{songs.name}}</div>
<ul>
  {{#each (sort-by "addedAt:desc" songs.entities) as |song|}}
    <li local-class="song-item {{if isQueue "queue-item"}} {{if (and video.videoId (eq song.videoId video.videoId)) "is-playing"}}" {{action updateVideo song}}>
      <span local-class="song-item-title">{{song.title}}</span>
      {{#if (or (and (not isQueue) (not (array-contains queue.entities song))) (and isQueue (not (array-contains mySongs.entities song))))}}
        <div local-class="song-item-actions add-to-queue" title="Add to queue" {{action addToList song (if isQueue "songs" "queue") bubbles=false}}>{{inline-svg "icons/add"}}</div>
      {{/if}}
      <div local-class="song-item-actions delete-song" title="Remove from list" {{action removeSong song songs bubbles=false}}>{{inline-svg "icons/cross"}}</div>
    </li>
  {{else}}
    {{#if isQueue}}
      <li local-class="info-text">Add some songs to your queue to get started</li>
    {{else if (eq songs.type "my-songs")}}
      <li local-class="info-text sidebar-item">Add some songs to your library to get started</li>
    {{else}}
      <li local-class="info-text sidebar-item">This playlist is empty</li>
    {{/if}}
  {{/each}}
</ul>
